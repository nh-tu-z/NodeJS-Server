<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <base href="/"> <!-- add this tag then the link will accept -->
        <script type="text/javascript" src="./lib/jquery.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="./lib/line-awesome/1.3.0/css/line-awesome.css" type="text/css"/> 
        <link rel="stylesheet" href="./css/main.css" type="text/css" />
    </head>
    <body>
        <h1>Project ID</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Ord</th>
              <th scope="col">Project Name</th>
              <th scope="col">Device ID</th>
              <th scope="col" colspan="2">Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each userDevice}}
            <tr>
              <th scope="row">{{sum @index 1}}</th>
              <td>{{this.nameProject}}</td>
              <td>{{this.addressProject}}</td>
                {{#if this.activeProject}}
                  <td>Active</td>
                  <td>
                    <button type="button" class="btn btn-link monitor-btn" data-id={{this._id}}>Monitor</button>
                  </td>
                {{else}}
                  <td>Unactive</td>
                  <td>
                    <a href="/site/project-monitor/back">Back</a>
                  </td>
                {{/if}}
              {{else}}
              <tr>
                <td colspan="3" class="text-center">You have no Projects. <a href=""> Request a Project</a></td>
                <td>
                    <a href="/site/project-monitor/back">Back</a>
                  </td>
              </tr>
              {{/each}}
            </tr>
          </tbody>
        </table>

        {{!-- submit monitor form --}}
        <form method="POST" name="monitor-form">
        </form>
        
        {{!--  --}}
        <script>
            $(document).ready(() => {
                var monitorForm = $('form[name="monitor-form"]')
                var monitorBtn = $('.monitor-btn')

                /**/
                 monitorBtn.click((e) => {
                  var monitorId = e.target.dataset.id 
                  monitorForm.attr('action','site/project-monitor/' + monitorId + '/access')
                  monitorForm.submit()
                })
                })
        </script>


        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>     

        
    </body>
</html>